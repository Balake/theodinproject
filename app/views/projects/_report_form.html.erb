<div class="report-project-form">
  <div class="col-12">
    <h1 class="text-center">Report project</h1>

    <%= form_tag report_project_path, remote: true do |form| %>
      <%= hidden_field_tag :lesson_id, lesson.id %>
      <%= hidden_field_tag :id %>

      <div class="form-group">
        <%= label_tag :description %>
        <%= text_area_tag :description,
          nil,
          required: true,
          class: 'form-control report-project-form__description',
          placeholder: 'Tell us why you think we should flag the submission'
        %>
      </div>

      <div class="text-center">
        <%= submit_tag 'Report project',
          class: 'button button--primary report-project-form__report-button'
        %>
      </div>
    <% end %>
  </div>
</div>